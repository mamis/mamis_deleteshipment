<?xml version="1.0"?>
<config>
    <modules>
        <Mamis_DeleteShipment>
            <version>1.0.1</version>
        </Mamis_DeleteShipment>
    </modules>
    <global>
        <models>
            <mamis_deleteshipment>
                <class>Mamis_DeleteShipment_Model</class>
            </mamis_deleteshipment>
        </models>
        <blocks>
            <mamis_deleteshipment>
                <class>Mamis_DeleteShipment_Block</class>
            </mamis_deleteshipment>
        </blocks>
        <helpers>
            <mamis_deleteshipment>
                <class>Mamis_DeleteShipment_Helper</class>
            </mamis_deleteshipment>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <mamis_deleteshipment after="Mage_Adminhtml">Mamis_DeleteShipment_Adminhtml</mamis_deleteshipment>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <mamis_deleteshipment>
                    <files>
                        <default>mamis_deleteshipment.csv</default>
                    </files>
                </mamis_deleteshipment>
            </modules>
        </translate>
        <events>
            <adminhtml_widget_container_html_before>
                <observers>
                    <mamis_deleteshipment>
                        <class>mamis_deleteshipment/observer</class>
                        <type>singleton</type>
                        <method>addDeleteButton</method>
                    </mamis_deleteshipment>
                </observers>
            </adminhtml_widget_container_html_before>
        </events>
    </adminhtml>
</config>